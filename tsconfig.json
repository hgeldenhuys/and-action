{
  "compilerOptions": {
    "target": "es2018",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "jsx": "react",
    "module": "es2015",
    "rootDir": "./src/and-action",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "./bin/**/*.test.ts",
    "./dist/**/*",
    "./bin/mocks/**/*",
    "./*.config.ts",
    "./src/test-app/**"
  ],
  "include": [
    "./src/and-action/*.ts",
    "node_modules/@remix-run/react/future/single-fetch.d.ts"
  ]
}
